#	Ativa o módulo de reescrita de URL do Apache
RewriteEngine On

# Redireciona para wwww
RewriteCond %{HTTP_HOST} !^www\. [NC]
	RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [R=301,L]

# Redireciona todas as requisições para o arquivo "framework/gimbal.php"
RewriteCond %{REQUEST_URI} !^\/application/frontend|/robots.txt|sitemap.txt|google7b8cfe41747e6d40.html|BingSiteAuth.xml
	RewriteRule ^(.*)$ framework/gimbal.php [L]